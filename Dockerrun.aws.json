{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "web",
      "image": "keviocastro/laravel",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": ".",
          "containerPath": "/var/app"
        }
      ],
      "links": [
        "db"
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "db"
        },
        {
          "name": "DB_USERNAME",
          "value": "master"
        },
        {
          "name": "DB_PASSWORD",
          "value": "vU2rubra"
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql",
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 3306
        }
      ],
      "environment": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "vU2rubra"
        },
        {
          "name": "MYSQL_USER",
          "value": "master"
        }
      ]
    }
  ]
}